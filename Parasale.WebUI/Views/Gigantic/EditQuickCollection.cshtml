
@model Parasale.Models.QuickCollection

<div class="row">
    <div class="col-md-12">
        <form asp-action="EditQuickCollection">

            @Html.HiddenFor(model => model.AssignedAdmin)
            @Html.HiddenFor(model => model.appUser)
            @Html.HiddenFor(model =>model.QuickStart)
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                <label asp-for="CollectionName" class="control-label"></label>
                <input asp-for="CollectionName" class="form-control" placeholder="Collection Name" />
                <span asp-validation-for="CollectionName" class="text-danger"></span>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group text-right">

                <input type="button" data-dismiss="modal" value="Cancel" class="btn btn-danger" />
                <input type="submit" value="Save" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

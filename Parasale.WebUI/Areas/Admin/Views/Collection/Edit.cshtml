@model CollectionListViewModel


    <div class="row">
        <div class="col-md-12">
            <form asp-action="Edit">
                @Html.HiddenFor(p => p.Id)

                @Html.HiddenFor(p => p.UserId)
                @Html.HiddenFor(p => p.AssignedAdmin)
                <div class="form-group">
                    <label asp-for="CollectionName" class="control-label"></label>
                    <input asp-for="CollectionName" class="form-control" />
                    <span asp-validation-for="CollectionName" class="text-danger"></span>
                </div>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group text-right">
                    <input type="button" data-dismiss="modal" value="Cancel" class="btn btn-danger" />
                    <input type="submit" value="Update" class="btn btn-info" />
                </div>
            </form>
        </div>
    </div>
